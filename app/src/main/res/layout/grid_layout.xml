<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerviewLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/hooverffext"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="100dp"
        android:layout_height="108dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:padding="15dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/skull2" />

    <TextView
        android:id="@+id/titlee"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"

        android:layout_toRightOf="@+id/imageview"
        android:fontFamily="@font/macabre"

        android:text="Title"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/addedon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlee"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/imageview"

        android:fontFamily="@font/macabre"
        android:text="Added on"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/date_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlee"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/addedon"

        android:fontFamily="@font/macabre"
        android:text="11-12-2020"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlee"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/date_recyclerview"

        android:fontFamily="@font/macabre"
        android:text="Index"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/heading_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="38sp"
        android:layout_below="@+id/addedon"
        android:layout_alignStart="@+id/addedon"
        android:layout_alignLeft="@+id/addedon"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/macabre"
        android:text="heading ggggggggggggggggggggggggggg ggggggggg gggg ggggggg gggggggggggggggg ggggggggggg gggg ggggggg"
        android:textColor="#ffffff"
        android:textSize="15sp" />


</RelativeLayout>

