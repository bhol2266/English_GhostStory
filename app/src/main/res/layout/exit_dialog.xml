<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/background"
    android:orientation="vertical">

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exit_button1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_Unit_ID" />


    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />



    <TextView
        android:id="@+id/exitMSG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/textcolor"
        android:fontFamily="@font/macabre"
        android:maxLines="2"
        android:text="If you Like the app. Please give us a Good Rating"/>






    <LinearLayout
        android:id="@+id/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exitMSG"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/rating1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/rating_star" />

        <ImageView
            android:id="@+id/rating2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/rating_star" />

        <ImageView
            android:id="@+id/rating3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/rating_star" />

        <ImageView
            android:id="@+id/rating4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/rating_star" />

        <ImageView
            android:id="@+id/rating5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@drawable/rating_star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exit_textview2"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="left"
        android:orientation="horizontal">


        <Button
            android:id="@+id/exit_button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/hooverffext"
            android:text="Rate us"
            android:textColor="#FFD60A" />

        <Button
            android:id="@+id/exit_button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Exit"
            android:background="@drawable/hooverffext"

            android:textColor="#FFD60A" />

    </LinearLayout>


</LinearLayout>

