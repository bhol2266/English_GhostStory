<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#3A3636">


    <SeekBar
        android:id="@+id/your_dialog_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:max="50"
        android:min="10"
        android:progress="20"
        android:progressTint="@color/yellow"
        android:thumbTint="@color/yellow" />

    <TextView
        android:id="@+id/textSize"
        style="@style/YellowTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_dialog_seekbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="20dp"
        android:text="20"
        android:textSize="30dp" />

    <Button
        android:id="@+id/your_dialog_button"
        style="@style/YellowTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_dialog_seekbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/hooverffext"
        android:text="OK" />

</RelativeLayout>