<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="appTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:fontFamily">@font/horror</item>

        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimaryDark">@color/themeColor</item>
        <item name="android:statusBarColor">@color/themeColor</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:navigationBarColor">@color/themeColor</item>
    </style>


    <style name="YellowTheme" parent="TextAppearance.AppCompat">
            <item name="android:textColor">@color/DefaultTextColor</item>
        <item name="android:fontFamily">@font/horror</item>
            <item name="tint">@color/tint</item>
    </style>



    <style name="AppTheme.Splash" parent="@style/appTheme">
        <item name="android:windowFullscreen">true</item>
    </style>



    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#B39C58</item>
        <item name="android:fontFamily">@font/lora</item>
        <item name="android:background">@drawable/background2</item>
    </style>

    <style name="tabText">

        <item name="android:textSize">20dp</item><!-- text size in menu-->
        <item name="android:fontFamily">@font/lora</item><!-- text size in menu-->
        <item name="android:background">@drawable/hooverffext</item><!-- text size in menu-->

    </style>


</resources>